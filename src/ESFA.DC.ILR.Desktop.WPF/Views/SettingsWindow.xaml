<Window x:Class="ESFA.DC.ILR.Desktop.WPF.Views.SettingsWindow"
        x:Name="settingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESFA.DC.ILR.Desktop.WPF"
        mc:Ignorable="d"
        Title="Settings" Height="250" Width="650" WindowStyle="None" WindowStartupLocation="CenterScreen"
        DataContext="{Binding Settings, Source={StaticResource Locator}}">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="2 5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Height" Value="25"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="2 5"/>
            <Setter Property="Height" Value="25"/>
        </Style>
    </Window.Resources>
    <Grid Margin="15 5 15 5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="0"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Content="Settings" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
        <Label Grid.Column="1" Grid.Row="1" Content="Connection String:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding IlrDatabaseConnectionString}"/>

        <Label Grid.Column="1" Grid.Row="2" Content="Output Directory:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding OutputDirectory}"/>
        <Button Grid.Column="3" Grid.Row="2" VerticalAlignment="Center" Width="75" Content="Choose" Command="{Binding ChooseOutputDirectoryCommand}"/>

        <StackPanel Grid.Column="2" Grid.Row="3" Margin="5 20 5 5" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Grid.Column="3" Grid.Row="3" VerticalAlignment="Center" Width="200" Content="Save" Command="{Binding SaveSettingsCommand}" />
            <Button Grid.Column="3" Grid.Row="3" VerticalAlignment="Center" Width="200" Content="Close" 
                    Command="{Binding CloseWindowCommand, Mode=OneWay}"
                    CommandParameter="{Binding ElementName=settingsWindow}"/>
        </StackPanel>
    </Grid>
</Window>
